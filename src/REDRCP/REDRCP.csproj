<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>Kliskatek.Driver.Rain.REDRCP</AssemblyName>
    <RootNamespace>Kliskatek.Driver.Rain.REDRCP</RootNamespace>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>A library that provides wraps RED Reader Control Protocol (RCP) commands, responses and notifications.</Title>
    <Version>0.9.1-alpha</Version>
    <Authors>aritz.alonso.kliskatek, ibon.zalbide</Authors>
    <Company>Kliskatek</Company>
    <Product>Kliskatek.Driver.Rain</Product>
    <Description>This library provides .NET wrappers that give access to RED RCP protocol commands, responses and notifications.</Description>
    <Copyright>Copyright © 2024 Kliskatek</Copyright>
    <PackageProjectUrl>www.kliskatek.com</PackageProjectUrl>
    <RepositoryUrl>https://github.com/kliskatek/driver-rain-net-redrcp</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageId>REDRCP</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Serilog" Version="4.0.2" />
    <PackageReference Include="System.IO.Ports" Version="8.0.0" />
  </ItemGroup>

</Project>
